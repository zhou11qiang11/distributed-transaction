<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zq.dao.GamePayMapper">


    <insert id="insert" useGeneratedKeys="true" keyProperty="payid" keyColumn="payid">
        INSERT INTO pay VALUES(NULL,#{uid},#{amount},#{paydate},0);
    </insert>
    <update id="updatePayConfirm">
        UPDATE pay SET payStatus=1 WHERE payid=#{payId};
    </update>

    <update id="updatePayCancel">
         UPDATE pay SET payStatus=-1 WHERE payid=#{payId};
    </update>
</mapper>