<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.zq.dao.GameUserMapper">


    <insert id="updateUser">
        UPDATE users
        SET remaining=remaining-#{amount}
        WHERE userId =#{userId} AND remaining>=#{amount}
    </insert>
</mapper>